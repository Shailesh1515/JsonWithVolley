<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#832948"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:background="#F1A8F1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_person_outline_black_24dp"/>

            <TextView
                android:id="@+id/id1"
                android:text="Id : "
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/id1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name1"
                android:text="Name : "
                android:textSize="15dp"
                android:layout_below="@id/id1"
                android:layout_toRightOf="@id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/name"
                android:textSize="15dp"
                android:layout_below="@id/id"
                android:layout_toRightOf="@id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/email1"
                android:text="Email : "
                android:textSize="15dp"
                android:layout_below="@id/name1"
                android:layout_toRightOf="@id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/email"
                android:textSize="15dp"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/gender1"
                android:text="Gender : "
                android:textSize="15dp"
                android:layout_below="@id/email1"
                android:layout_toRightOf="@id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/gender"
                android:textSize="15dp"
                android:layout_below="@id/email"
                android:layout_toRightOf="@id/gender1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/mo1"
                android:text="Mo : "
                android:textSize="15dp"
                android:layout_below="@id/gender1"
                android:layout_toRightOf="@id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mo"
                android:textSize="15dp"
                android:layout_below="@id/gender"
                android:layout_toRightOf="@id/mo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>